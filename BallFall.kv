#:kivy 1.0.9
#:import ReferenceListProperty kivy.properties.ReferenceListProperty
<Ball>:
    size: self.d, self.d
    canvas:
        Color:
            rgba: (1,0,0,1)
        Ellipse:
            pos: self.pos
            size: self.size

<Coin>:
    size: self.d, self.d
    canvas:
        Color:
            rgba: (.95,.85, .25,1)
        Ellipse:
            pos: self.pos
            size: self.size

<ScreenManager>:
    GameScreen:
        name: 'gameScreen'
        GameWidget:
            id: gameWidget
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
